<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginRight="20dp"
        android:gravity="bottom|right"
        android:text="5x50+9"
        android:textColor="@color/igual_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginRight="20dp"
        android:gravity="bottom|right"
        android:text="259"
        android:textColor="@color/teclas_Dark"
        android:textSize="95sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom|right"
        android:layout_marginTop="25dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"

            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="C" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="+/-" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="%" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button_verde"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom|right"
        android:layout_marginTop="5dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="@string/_1" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button_verde"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom|right"
        android:layout_marginTop="5dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button_verde"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom|right"
        android:layout_marginTop="5dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button_verde"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom|right"
        android:layout_marginTop="5dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="0" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="." />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="( )" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/button_Igual"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:text="=" />
    </LinearLayout>


</LinearLayout>